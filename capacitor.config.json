{
  "appId": "bunout.app",
  "appName": "bunout",
  "webDir": "build",
  "server": {
    "url": "https://app.bunout.info",
    "androidScheme": "https",
    "cleartext": true,
    "allowNavigation": ["https://kauth.kakao.com", "https://kapi.kakao.com"]
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  },
  "bundledWebRuntime": false,
  "plugins": {
    "Browser": {
      "presentationStyle": "popover",
      "windowName": "_self"
    },
    "App": {
      "deepLinkingEnabled": true
    },
    "CapacitorHttp": {
      "enabled": true
    }
  },
  "ios": {
    "contentInset": "automatic",
    "scrollEnabled": true
  }
}
